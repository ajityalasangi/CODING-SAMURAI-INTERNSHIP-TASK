package Calculator;
import java.util.Scanner;
import java.lang.Math;
public class calculator {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.println("Welcome to Calculator Operation");
		int choice;
		do {
			System.out.println("Enter the first number: ");
			int a = sc.nextInt();
			System.out.println("Enter the second number: ");
			int b = sc.nextInt();
			System.out.println("1. Addition \n 2. Subtraction \n 3. Division \n 4. Multiplication \n 5. Exit");
			choice = sc.nextInt();
			switch(choice) {
				case 1 : System.out.println(a+b);
						break;
				case 2 : System.out.println(Math.abs(a-b));
						break;
				case 3 : System.out.println(a/b);
						break;
				case 4 : System.out.println(a*b);
						break;	
				case 5 : System.out.println("Exiting the calculator");
						break;
				
			}
		}while(choice!=5);
	}

}
